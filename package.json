{
  "name": "express-mongo-auth",
  "version": "1.0.0",
  "description": "A trello backend system using Express.js and MongoDB.",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start-build": "node dist/server.js",
    "test": "jest --runInBand",
    "tsc:check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "find:unused-exports": "ts-prune",
    "find:orphans": "madge --orphans src || true",
    "find:unused-deps": "depcheck --skip-missing=true",
    "clean:fix": "npm run lint && npm run tsc:check"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "depcheck": "^1.4.0",
    "dotenv": "^8.2.0",
    "eslint": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "madge": "^5.0.0",
    "mongoose": "^8.19.2",
    "ts-prune": "^0.7.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.10.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "author": "Your Name",
  "license": "MIT"
}
